<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:id="@+id/dialog_confirm_text_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_shape_dark">

            <TextView
                android:id="@+id/r_u_sure"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Are you sure you want to"
                android:textSize="17dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/dialog_confirm_action_type_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/r_u_sure"
                android:layout_marginTop="5dp"
                android:text="CONFIRM"
                android:textSize="20dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/last_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="this reservation?"
                android:textSize="17dp"
                android:textAlignment="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/dialog_confirm_action_type_tv"/>



        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_confirm_text_box"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true">


            <Button
                android:id="@+id/dialog_confirm_button_NO"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape_dark"
                android:layout_marginRight="5dp"
                android:text="Cancel" />

            <Button
                android:id="@+id/dialog_confirm_button_YES"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape_dark"
                android:layout_marginLeft="5dp"
                android:text="CONF" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>