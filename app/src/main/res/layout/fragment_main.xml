<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    tools:context="com.vicinity.vicinity.controller.fragments.MainFragment">




    <EditText
        android:id="@+id/city_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:hint="Detecting your location..."
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textAlignment="center"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/main_fragment_sort_filter_nearest"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="nearest"
            android:layout_marginRight="10dp"
            android:textColor="#6effffff"
            android:background="@drawable/button_shape_dark"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="sort"
            android:textSize="15dp"
            android:textAlignment="center"
            android:layout_gravity="center_vertical"/>

        <Button
            android:id="@+id/main_fragment_sort_filter_popular"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="most popular"
            android:layout_marginLeft="10dp"
            android:textColor="#6effffff"
            android:background="@drawable/button_shape_dark"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <EditText
            android:id="@+id/place_name_input"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:textSize="15dp"
            android:hint="enter name"
            android:textAlignment="center"/>

        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:text="go"
            android:background="@drawable/button_shape_dark"/>

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="..or chose a type"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_shape_dark">



        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="3"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/restaurant_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_restaurant_white_48dp"/>

            <ImageView
                android:id="@+id/bar_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_local_bar_white_48dp"/>

            <ImageView
                android:id="@+id/cafe_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_local_cafe_white_48dp"/>

            <ImageView
                android:id="@+id/hotel_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_hotel_white_48dp"/>

            <ImageView
                android:id="@+id/casino_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_casino_white_48dp"/>

            <ImageView
                android:id="@+id/delivery_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_local_shipping_white_48dp"/>

            <ImageView
                android:id="@+id/fitness_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_fitness_center_white_48dp"/>

            <ImageView
                android:id="@+id/pool_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_pool_white_48dp"/>

            <ImageView
                android:id="@+id/movie_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_shape_dark"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/ic_local_movies_white_48dp"/>

        </GridLayout>


    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



    </LinearLayout>



</LinearLayout>
