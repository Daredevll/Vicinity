<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/transparent"
    tools:context="com.vicinity.vicinity.controller.fragments.MainFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp">

        <EditText
            android:id="@+id/city_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_city_hint"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/find_my_location_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:text="@string/button_find_my_location"/>


    </LinearLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">

        <ImageView
            android:id="@+id/restaurant_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_restaurant_white_48dp"/>

        <ImageView
            android:id="@+id/bar_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_local_bar_white_48dp"/>

        <ImageView
            android:id="@+id/cafe_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_local_cafe_white_48dp"/>

        <ImageView
            android:id="@+id/hotel_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_hotel_white_48dp"/>

        <ImageView
            android:id="@+id/casino_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_casino_white_48dp"/>

        <ImageView
            android:id="@+id/delivery_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_local_shipping_white_48dp"/>

        <ImageView
            android:id="@+id/fitness_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_fitness_center_white_48dp"/>

        <ImageView
            android:id="@+id/pool_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_pool_white_48dp"/>

        <ImageView
            android:id="@+id/movie_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_shape_dark"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_local_movies_white_48dp"/>

    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">



    </LinearLayout>



</LinearLayout>
