<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">



        <LinearLayout
            android:id="@+id/dialog_answer_date_holder"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_answer_business_comment_edit"
            android:layout_alignRight="@+id/dialog_answer_business_comment_edit"
            android:layout_marginTop="30dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:background="@drawable/button_shape_dark">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="On"/>

            <TextView
                android:id="@+id/dialog_answer_date_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center"
                android:text="12.04.16"/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_answer_time_holder"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_answer_business_comment_edit"
            android:layout_alignRight="@+id/dialog_answer_business_comment_edit"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dialog_answer_date_holder"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:background="@drawable/button_shape_dark">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="At"/>


            <TextView
                android:id="@+id/dialog_answer_time_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="21:30"/>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/dialog_answer_people_count_holder"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_answer_business_comment_edit"
            android:layout_alignRight="@+id/dialog_answer_business_comment_edit"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/dialog_answer_time_holder"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:background="@drawable/button_shape_dark">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="20sp"
                android:text="Table for"/>


            <TextView
                android:id="@+id/dialog_answer_people_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="4" />



        </LinearLayout>






        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_answer_business_comment_edit"
            android:layout_alignRight="@+id/dialog_answer_business_comment_edit"
            android:layout_marginTop="20dp"
            android:text="We&apos;d like a table for 4 people next to a window, with 2 high-chairs"
            android:id="@+id/dialog_answer_comment_tv"
            android:textAlignment="center"
            android:textSize="14sp"
            android:layout_below="@+id/dialog_answer_people_count_holder"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        <EditText
            android:id="@+id/dialog_answer_business_comment_edit"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:hint="Leave a comment for the customer"
            android:textSize="14sp"
            android:layout_below="@+id/dialog_answer_comment_tv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/dialog_answer_business_comment_edit"
            android:layout_alignRight="@+id/dialog_answer_business_comment_edit"
            android:layout_below="@+id/dialog_answer_business_comment_edit"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/dialog_answer_deny_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@drawable/button_shape_dark"
                android:text="decline"/>

            <Button
                android:id="@+id/dialog_answer_later_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/button_shape_dark"
                android:text="later"/>

            <Button
                android:id="@+id/dialog_answer_confirm_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="confirm"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_shape_dark"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>