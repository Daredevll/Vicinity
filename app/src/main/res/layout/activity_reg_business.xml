<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg_night_blurred"
    tools:context="com.vicinity.vicinity.controller.RegBusinessActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#66000000"
    >
    <TextView
        android:id="@+id/business_reg_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:visibility="invisible"
        android:textAlignment="center"
        android:textSize="20dp"
        android:text="We have gathered all the information necessary to proceed with registering the place you were just exploring and to link it to your account. By clicking 'REGISTER' you confirm that you are the owner or a legal representative of the business that the selected place represents and agree with this application's Terms of Service."/>

    <TextView
        android:id="@+id/business_reg_after_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="16dp"
        android:text="Your application was sent successfully. An SMS with auto-generated verification code will be sent on the phone number, registered with the selected business. To verify your connection to the selected business you must input the received code in the field below and click 'SEND CODE'. The pending application would stay open a limited period of time. When that period expires you would no longer be able to use the received code. If you have not received an SMS within 12 hours, please try registering the business again.
        Thank you for chosing 'Vicinity'"/>

    <EditText
        android:id="@+id/business_reg_input_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp"
        android:hint="Enter code"
        android:textAlignment="center"
        android:inputType="numberSigned"
        android:layout_below="@+id/business_reg_agree_check"
        android:layout_centerHorizontal="true"/>

    <CheckBox
        android:id="@+id/business_reg_agree_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_reg_terms"
        android:layout_marginTop="70dp"
        android:text="agree and continue"
        android:layout_centerHorizontal="true"/>

    <Button
    android:id="@+id/business_reg_send_button"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/business_reg_input_code"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="10dp"
    android:text="register"
    android:background="@drawable/button_shape_dark"/>

    <Button
        android:id="@+id/business_reg_send_code_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/business_reg_input_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="send code"
        android:background="@drawable/button_shape_dark"/>


</RelativeLayout>
</RelativeLayout>
