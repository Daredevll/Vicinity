<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/transparentWhitePressed"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="@color/lessTransparentWhite"/>
            <corners
                android:radius="4dp"/>
        </shape>
    </item>
</selector>